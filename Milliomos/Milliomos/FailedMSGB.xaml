<Window x:Class="Milliomos.FailedMSGB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milliomos"
        mc:Ignorable="d"
        Title="FailedMSGB" Height="200" Width="500" FontSize="20" FontFamily="Arial" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="Manual" 
        Top="300" Left="540">
    <Window.Resources>
        <Style x:Key="ButtonStyle">
            <Setter Property="Button.Background" Value="Black"/>
            <Setter Property="Button.BorderBrush" Value="DarkBlue"/>
            <Setter Property="Button.Foreground" Value="Red"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <SolidColorBrush Color="Black"/>
    </Window.Background>


    <Border BorderThickness="2" BorderBrush="DarkBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="All you need to do is to follow the damn train CJ!" Foreground="Orange" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="mainTextBLC" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                <Border Height="30" Width="100">
                    <Button x:Name="okayBtn" Content="Francba" Click="okayBtn_Click" Style="{StaticResource ButtonStyle}"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>