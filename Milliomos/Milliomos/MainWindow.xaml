<Window x:Class="Milliomos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milliomos"
        mc:Ignorable="d"
        Title="Legyen Ön is milliomos!" Height="1080" Width="1920" WindowState="Maximized" FontSize="64">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" x:Name="question_BTN" Content="{Binding currentPack.Question}" HorizontalAlignment="Center" VerticalAlignment="Top" 
       HorizontalContentAlignment="Center" Height="170" Width="1500"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="a_BTN" Content="{Binding currentPack.A}" Width="800" Height="100" Margin="0,0,15,0" Click="BTN_Click"/>
            <Button x:Name="b_BTN" Content="{Binding currentPack.B}" Width="800" Height="100" Margin="15,0,0,0" Click="BTN_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="80">
            <Button x:Name="c_BTN" Content="{Binding currentPack.C}" Width="800" Height="100" Margin="0,0,15,0" Click="BTN_Click"/>
            <Button x:Name="d_BTN" Content="{Binding currentPack.D}" Width="800" Height="100" Margin="15,0,0,0" Click="BTN_Click"/>
        </StackPanel>
    </Grid>
</Window>
